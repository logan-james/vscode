// Place your key bindings in this file to override the defaults
[
  // NAVIGATION
  {
    "key": "ctrl+shift+a", // Shortcut key combination
    "command": "workbench.action.terminal.focusNext", // Moves focus to the next terminal window
    "when": "terminalFocus" // Condition: this command works when the terminal is focused
  },
  {
    "key": "ctrl+shift+b", // Shortcut key combination
    "command": "workbench.action.terminal.focusPrevious", // Moves focus to the previous terminal window
    "when": "terminalFocus" // Condition: this command works when the terminal is focused
  },
  {
    "key": "ctrl+shift+j", // Shortcut key combination
    "command": "workbench.action.togglePanel" // Toggles the visibility of the bottom panel (terminal, problems, output, debug console views)
  },
  {
    "key": "ctrl+shift+n", // Shortcut key combination
    "command": "workbench.action.terminal.new", // Opens a new terminal window
    "when": "terminalFocus" // Condition: this command works when the terminal is focused
  },
  {
    "key": "ctrl+shift+w", // Shortcut key combination
    "command": "workbench.action.terminal.kill", // Closes the currently focused terminal window
    "when": "terminalFocus" // Condition: this command works when the terminal is focused
  },

  // FILE TREE
  {
    "command": "workbench.action.toggleSidebarVisibility", // Toggles the visibility of the sidebar
    "key": "ctrl+e" // Shortcut key combination
  },
  {
    "command": "workbench.files.action.focusFilesExplorer", // Focuses the file explorer view
    "key": "ctrl+e", // Shortcut key combination
    "when": "editorTextFocus" // Condition: this command works when an editor is focused
  },
  {
    "key": "n", // Shortcut key
    "command": "explorer.newFile", // Creates a new file in the currently focused directory in the file explorer
    "when": "filesExplorerFocus && !inputFocus" // Condition: works when file explorer is focused and no input box is active
  },
  {
    "command": "renameFile", // Renames the selected file in the file explorer
    "key": "r", // Shortcut key
    "when": "filesExplorerFocus && !inputFocus" // Condition: works when file explorer is focused and no input box is active
  },
  {
    "key": "shift+n", // Shortcut key combination
    "command": "explorer.newFolder", // Creates a new folder in the file explorer
    "when": "explorerViewletFocus" // Condition: works when the explorer viewlet is focused
  },
  {
    "key": "shift+n", // Shortcut key combination
    "command": "workbench.action.newWindow", // Opens a new window of the editor
    "when": "!explorerViewletFocus" // Condition: works when the explorer viewlet is not focused
  },
  {
    "command": "deleteFile", // Deletes the selected file in the file explorer
    "key": "d", // Shortcut key
    "when": "filesExplorerFocus && !inputFocus" // Condition: works when file explorer is focused and no input box is active
  },

  // EXTRA
  {
    "key": "ctrl+shift+5", // Shortcut key combination
    "command": "editor.emmet.action.matchTag" // Executes Emmet's 'Match Tag' action in the editor
  },
  {
    "key": "ctrl+z", // Shortcut key combination
    "command": "workbench.action.toggleZenMode" // Toggles Zen Mode, which provides a distraction-free editing environment
  },
  {
    "key": "ctrl+cmd+a", // Toggle side bar (keeping it for tmc)
    "command": "workbench.action.toggleActivityBarVisibility"
  },

  // adding vim motions moving through command palette

  // Other keybindings...
  {
    "key": "j",
    "command": "workbench.action.quickOpenNavigateNext",
    "when": "inQuickOpen"
  },
  {
    "key": "k",
    "command": "workbench.action.quickOpenNavigatePrevious",
    "when": "inQuickOpen"
  },
  {
    "key": "g",
    "command": "workbench.action.quickOpenNavigateNext",
    "when": "inQuickOpenEntry && !inQuickOpenDetails"
  },
  {
    "key": "G",
    "command": "workbench.action.quickOpenNavigatePrevious",
    "when": "inQuickOpenEntry && !inQuickOpenDetails"
  }
]
